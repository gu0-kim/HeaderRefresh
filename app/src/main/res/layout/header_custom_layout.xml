<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <!--给toolbar留空间，高度待定，高度要等于toolbar实际高度（由于toolbar是否有fitsSystemWindows属性未知，所以高度待定）-->
    <LinearLayout
        android:id="@+id/content_toolbar"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:orientation="vertical" />

    <LinearLayout
        android:id="@+id/top_front"
        android:layout_width="match_parent"
        android:layout_height="@dimen/front_view_height"
        android:background="@color/colorPrimary"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/top_scan_btn_front"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical">

        </LinearLayout>

        <LinearLayout
            android:id="@+id/top_payment_btn_front"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical" />


        <LinearLayout
            android:id="@+id/top_transfer_btn_front"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical">

        </LinearLayout>

        <LinearLayout
            android:id="@+id/top_card_btn_front"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical">

        </LinearLayout>


    </LinearLayout>

    <include layout="@layout/below_item_btn_layout" />
</LinearLayout>